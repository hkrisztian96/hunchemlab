<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= todo.name %></h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/todos/<%= todo._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="todo[name]" placeholder="Name" value="<%= todo.name %>" ></input>
                </div>
                <div class="form-group">
                    <input type="Date" class="form-control" name="todo[expiration_date]" placeholder="Exiration Date" value="<%= todo.expiration_date %>" ></input>
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" name="todo[description]" placeholder="Description"><%= todo.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
             <a href="/todos">Go Back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>