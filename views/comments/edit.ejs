<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Comment</h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/todos/<%= todo_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="comment[text]" value="<%= comment.text %>"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
             <a href="/todos/<%= todo_id %>">Go Back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>