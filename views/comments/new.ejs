<% include ../partials/header %>

<div class="container" style="padding-top: 15%;">
    <div class="row">
        <h1 style="text-align: center;">Add New Comment to <%= todo.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/todos/<%= todo._id %>/comments" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="comment[text]" placeholder="text"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
             <a href="/todos">Go Back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>